{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "rootDir": "../src",
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "types": ["mocha", "chai", "node"]
  },
  "compileOnSave": false,
  "exclude": ["../node_modules", "../lib", "../tests"],
  "include": ["../src/**/*"]
}
